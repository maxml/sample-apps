<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:animateLayoutChanges="true"
                android:orientation="vertical">

    <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="@style/ToolbarTheme"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:titleTextAppearance="@style/Toolbar.TitleText"/>


    <LinearLayout
            android:id="@+id/login_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/toolbar"
            android:orientation="vertical"
            android:visibility="visible">

        <TextView
                android:id="@+id/infoText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="Authorize to send event"
                android:textColor="#333"
                android:textSize="18sp"/>

        <TextView
                android:id="@+id/greeting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/infoText"
                android:layout_centerHorizontal="true"
                android:text="FACEBOOK user name: Andrey"
                android:textColor="#333"
                android:textSize="14sp"/>

        <TextView
                android:id="@+id/idText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/greeting"
                android:layout_centerHorizontal="true"
                android:text="FACEBOOK user id: 232"
                android:textColor="#333"
                android:textSize="14sp"/>

        <EditText
                android:id="@+id/eventMessages"
                android:layout_width="fill_parent"
                android:layout_height="150dp"
                android:layout_above="@+id/login_send_message"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/greeting"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:autoLink="all"
                android:background="@android:color/transparent"
                android:clickable="false"
                android:cursorVisible="false"
                android:editable="false"
                android:ems="10"
                android:gravity="left"
                android:isScrollContainer="true"
                android:longClickable="false"
                android:scrollbars="vertical"/>

        <LinearLayout
                android:id="@+id/login_send_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

            <EditText
                    android:id="@+id/msgBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|bottom"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="@string/msg_hint"
                    android:longClickable="false"
                    android:maxLength="20"/>

            <Button
                    android:id="@+id/sendEventButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/send_btn_label"/>

        </LinearLayout>


    </LinearLayout>

    <RelativeLayout
            android:id="@+id/login_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_info"
            android:layout_margin="@dimen/activity_vertical_margin">

        <com.google.android.gms.common.SignInButton
                android:id="@+id/gplus_sign_in_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/facebook_login_button"
                android:layout_alignEnd="@+id/facebook_login_button"
                android:layout_alignLeft="@+id/facebook_login_button"
                android:layout_alignRight="@+id/facebook_login_button"
                android:layout_alignStart="@+id/facebook_login_button"
                android:layout_gravity="center_horizontal"/>

        <com.facebook.login.widget.LoginButton
                android:id="@+id/facebook_login_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/twitter_login_button"
                android:layout_alignEnd="@+id/twitter_login_button"
                android:layout_alignLeft="@+id/twitter_login_button"
                android:layout_alignRight="@+id/twitter_login_button"
                android:layout_alignStart="@+id/twitter_login_button"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"/>

        <com.twitter.sdk.android.core.identity.TwitterLoginButton
                android:id="@+id/twitter_login_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/activity_vertical_margin"/>
    </RelativeLayout>

</RelativeLayout>
